{
  "name": "dock",
  "version": "1.0.0",
  "description": "Floating dock app for AURA",
  "main": "electron/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"next dev -p 3001\" \"wait-on http://localhost:3001 && electron .\"",
    "build": "npm run build:next && npm run build:electron",
    "build:next": "next build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start": "NODE_ENV=production concurrently \"next start -p 3001\" \"wait-on http://localhost:3001 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@aura/design-system": "workspace:*",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.1",
    "lucide-react": "^0.469.0",
    "next": "^16.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@aura/eslint-config": "workspace:*",
    "@aura/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.38.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "5.9.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.aura.dock",
    "productName": "AURA Dock",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/main.js",
      "electron/preload.js",
      ".next/**/*",
      "app/**/*",
      "public/**/*",
      "package.json",
      "next.config.js",
      "node_modules/next/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*",
      "node_modules/@aura/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
