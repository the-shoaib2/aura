{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@aura/*": ["packages/*/src"]
		},
		"types": ["node"],
		"lib": ["ES2015", "DOM"]
	}
}
