{
	"extends": "@aura/typescript-config/tsconfig.frontend.json",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"rootDirs": [
			".",
			"../@aura/rest-api-client/src",
			"../@aura/composables/src",
			"../@aura/chat/src",
			"../@aura/design-system/src"
		],
		"outDir": "dist",
		"types": [
			"vitest/globals",
			"unplugin-icons/types/vue",
			"../@aura/design-system/src/shims-modules.d.ts"
		],
		"paths": {
			"@/*": ["./src/*"],
			"@aura/rest-api-client*": ["../@aura/rest-api-client/src*"],
			"@aura/composables*": ["../@aura/composables/src*"],
			"@aura/constants*": ["../../@aura/constants/src*"],
			"@aura/chat*": ["../@aura/chat/src*"],
			"@aura/design-system*": ["../@aura/design-system/src*"],
			"@aura/i18n*": ["../@aura/i18n/src*"],
			"@aura/stores*": ["../@aura/stores/src*"],
			"@aura/api-types*": ["../../@aura/api-types/src*"],
			"@aura/utils*": ["../../@aura/utils/src*"]
		},
		// TODO: remove all options below this line
		"useUnknownInCatchVariables": false
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
	"exclude": ["src/plugins/codemirror/typescript/worker/**/*.d.ts"]
}
