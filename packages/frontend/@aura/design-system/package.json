{
  "name": "@aura/design-system",
  "version": "1.0.0",
  "description": "Design system component library for AURA",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./css": {
      "import": "./dist/style.css"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "clean": "rimraf dist .turbo",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --watch --noEmit",
    "test": "vitest run",
    "test:dev": "vitest",
    "lint": "eslint src --quiet",
    "lint:fix": "eslint src --fix",
    "lint:styles": "stylelint \"src/**/*.{css,scss}\" --cache",
    "lint:styles:fix": "stylelint \"src/**/*.{css,scss}\" --fix --cache",
    "format": "biome format --write . && prettier --write . --ignore-path ../../../../.prettierignore",
    "format:check": "biome ci . && prettier --check . --ignore-path ../../../../.prettierignore"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.1.15",
    "@tanstack/react-table": "^8.21.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@aura/eslint-config": "workspace:*",
    "@aura/typescript-config": "workspace:*",
    "@aura/vitest-config": "workspace:*",
    "@testing-library/jest-dom": "catalog:frontend",
    "@testing-library/react": "catalog:frontend",
    "@testing-library/user-event": "catalog:frontend",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "catalog:frontend",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "react": "catalog:frontend",
    "react-dom": "catalog:frontend",
    "tailwindcss": "^3.4.14",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "catalog:",
    "vitest-mock-extended": "catalog:"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "license": "See LICENSE.md file in the root of the repository"
}

