{
	"name": "@aura/vitest-config",
	"version": "1.0.0",
	"type": "module",
	"peerDependencies": {
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"devDependencies": {
		"@aura/typescript-config": "workspace:*",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vitest": "catalog:"
	},
	"files": [
		"node.ts",
		"frontend.ts"
	],
	"exports": {
		"./node": {
			"import": "./node.ts",
			"require": "./node.ts",
			"types": "./node.d.ts"
		},
		"./frontend": {
			"import": "./frontend.ts",
			"require": "./frontend.ts",
			"types": "./frontend.d.ts"
		}
	},
	"scripts": {
		"clean": "rimraf dist .turbo",
		"dev": "pnpm watch",
		"typecheck": "tsc --noEmit",
		"build": "tsc -p tsconfig.build.json",
		"format": "biome format --write .",
		"format:check": "biome ci .",
		"watch": "tsc -p tsconfig.build.json --watch"
	},
	"license": "See LICENSE.md file in the root of the repository"
}

