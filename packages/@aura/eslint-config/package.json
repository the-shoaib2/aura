	"version": "0.0.1",
	"exports": {
		"./base": {
			"types": "./dist/configs/base.d.js",
			"default": "./dist/configs/base.js"
		},
		"./frontend": {
			"types": "./dist/configs/frontend.d.js",
			"default": "./dist/configs/frontend.js"
		},
		"./node": {
			"types": "./dist/configs/node.d.js",
			"default": "./dist/configs/node.js"
		},
		"./next-js": "./next.js",
		"./next.js": "./next.js"
	},
	"scripts": {
		"build": "tsc",
		"clean": "rimraf dist .turbo",
