{
	"name": "@aura/crypto",
	"version": "1.0.0",
	"description": "Crypto functionality of AURA",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"clean": "rimraf dist .turbo",
		"dev": "pnpm watch",
		"typecheck": "tsc --noEmit",
		"build": "tsc -p tsconfig.build.json",
		"format": "biome format --write .",
		"format:check": "biome ci .",
		"lint": "eslint . --quiet",
		"lint:fix": "eslint . --fix",
		"watch": "tsc -p tsconfig.build.json --watch",
		"test": "jest",
		"test:dev": "jest --watch"
	},
	"files": [
		"dist/**/*"
	],
	"dependencies": {
		"@aura/utils": "workspace:*",
		"@aura/constants": "workspace:*",
		"@aura/errors": "workspace:*"
	},
	"devDependencies": {
		"@aura/typescript-config": "workspace:*",
		"@types/node": "*",
		"jest": "catalog:",
		"ts-jest": "catalog:",
		"typescript": "catalog:"
	},
	"license": "See LICENSE.md file in the root of the repository"
}
