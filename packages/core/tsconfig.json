{
	"extends": ["@aura/typescript-config/base.json"],
	"compilerOptions": {
		"lib": ["es2022"],
		"rootDir": ".",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		},
		"tsBuildInfoFile": "dist/typecheck.tsbuildinfo",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["src/**/*.ts"],
	"references": [
		{ "path": "../@aura/config/tsconfig.build.json" },
		{ "path": "../@aura/constants/tsconfig.build.json" },
		{ "path": "../@aura/db/tsconfig.build.json" }
	]
}
