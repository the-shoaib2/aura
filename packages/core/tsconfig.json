{
	"extends": [
		"@aura/typescript-config/tsconfig.common.json",
		"@aura/typescript-config/tsconfig.backend.json"
	],
	"compilerOptions": {
		"lib": ["es2022"],
		"rootDir": ".",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"],
			"@test/*": ["../test/*"]
		},
		"tsBuildInfoFile": "dist/typecheck.tsbuildinfo",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		// TODO: remove all options below this line
		"useUnknownInCatchVariables": false
	},
	"include": ["src/**/*.ts", "test/**/*.ts"],
	"references": [
		{ "path": "../workflow/tsconfig.build.esm.json" },
		{ "path": "../@aura/decorators/tsconfig.build.json" },
		{ "path": "../@aura/backend-common/tsconfig.build.json" },
		{ "path": "../@aura/config/tsconfig.build.json" },
		{ "path": "../@aura/constants/tsconfig.build.json" },
		{ "path": "../@aura/di/tsconfig.build.json" },
		{ "path": "../@aura/client-oauth2/tsconfig.build.json" }
	]
}
