{
	"extends": ["./tsconfig.json"],
	"compilerOptions": {
		"composite": true,
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/build.tsbuildinfo",
		"skipLibCheck": true,
		"declaration": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/__tests__/**", "**/node_modules/**"]
}
