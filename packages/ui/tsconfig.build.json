{
	"extends": ["./tsconfig.json", "@aura/typescript-config/tsconfig.build.json"],
	"compilerOptions": {
		"composite": true,
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/build.tsbuildinfo"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["src/**/__tests__/**", "src/**/*.test.ts", "src/**/*.test.tsx"]
}
